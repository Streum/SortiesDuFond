{% extends 'base.html.twig' %}

{% block title %}Liste des Lieux{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center">Liste des lieux</h1>

    <div class="container my-4">
        <div class="row justify-content-center">
            {% for lieux in lieuxes %}
                <div class="col-md-3 mb-4">
                    <div class="card" style="width: 100%; height: 300px;">

                        <div class="card-body">
                            <h5 class="card-title">{{ lieux.nomLieu }}</h5>
                            <p class="card-text">{{ lieux.noVille.nomVille }}</p>
                            <p class="card-text">{{ lieux.rue }}</p>
                            <p class="card-text">Latitude : {{ lieux.latitude }} - Longitude : {{ lieux.longitude }}</p>
                            <a class="btn btn-outline-primary" href="{{ path('app_lieux_show', {'id': lieux.id}) }}">DÃ©tails</a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a class="btn btn-outline-success" href="{{ path('app_lieux_edit', {'id': lieux.id}) }}">Modifier</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

<div class="d-flex justify-content-center">
    <a class="btn btn-outline-primary ms-2" href="{{ path('app_lieux_new') }}">Nouveau lieu</a>
</div>

{% endblock %}
