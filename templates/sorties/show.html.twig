{% extends 'base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}
    <h1>Sorties</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>Date de Début</th>
                <td>{{ sortie.dateDebut ? sortie.dateDebut|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de Clôture</th>
                <td>{{ sortie.dateCloture ? sortie.dateCloture|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ sortie.duree }}</td>
            </tr>
            <tr>
                <th>Inscriptions Max</th>
                <td>{{ sortie.nbInscriptionsMax }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ sortie.descriptionInfos }}</td>
            </tr>
            <tr>
                <th>État de la Sortie</th>
                <td>{{ sortie.noEtat.libelle }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ sortie.urlPhoto }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sorties_index') }}">Retour à la liste</a>

    <a href="{{ path('app_sorties_edit', {'id': sortie.id}) }}">Modifier</a>

    {{ include('sorties/_delete_form.html.twig') }}
{% endblock %}
