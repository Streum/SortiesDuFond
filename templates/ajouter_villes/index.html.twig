{% extends 'base.html.twig' %}

{% block title %}Villes index{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center">Liste des villes</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Nom de la Ville</th>
                        <th>Code Postal</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ville in villes %}
                        <tr>
                            <td>{{ ville.nomVille }}</td>
                            <td>{{ ville.codePostal }}</td>
                            <td>
                                <a class="btn btn-primary ms-2"
                                   href="{{ path('app_ajouter_villes_show', {'id': ville.id}) }}">DÃ©tails</a>
                                <a class="btn btn-primary ms-2"
                                   href="{{ path('app_ajouter_villes_edit', {'id': ville.id}) }}">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <a class="btn btn-primary ms-2" href="{{ path('app_ajouter_villes_new') }}">Ajouter une ville</a>
    </div>
{% endblock %}
