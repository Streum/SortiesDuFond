{% extends 'base.html.twig' %}

{% block title %}New Sorties{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center">Créer une sortie</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                {{ form_start(form) }}

                {{ form_row(form.nom) }}
                {{ form_row(form.dateDebut) }}
                {{ form_row(form.dateClotureInscription) }}
                {{ form_row(form.nbInscriptionsMax) }}
                {{ form_row(form.descriptionInfos) }}
                {{ form_row(form.urlPhoto) }}
                {{ form_row(form.noLieu) }}
                <div class="d-flex justify-content-center">
                    <button class="btn btn-success ms-2" href="{{ path('app_sorties_new') }}">Créer</button>
                    <a class="btn btn-primary ms-2" href="{{ path('app_sorties_index') }}">Liste des sorties</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
