{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Profil du Participant</h1>

        <div class="row justify-content-center">
            <div class="col-md-4 text-center">
                <img src="{{ asset('uploads/photos/' ~ participant.photo) }}" alt="Photo de profil" class="img-fluid rounded-circle shadow-sm w-75">
            </div>
            <div class="col-md-8">
                <div class="user-info">
                    <div class="mb-3">
                        <strong>Email:</strong>
                        <p>{{ participant.email }}</p>
                    </div>
                    <div class="mb-3">
                        <strong>Pseudo:</strong>
                        <p>{{ participant.pseudo }}</p>
                    </div>
                    <div class="mb-3">
                        <strong>Nom:</strong>
                        <p>{{ participant.nom }}</p>
                    </div>
                    <div class="mb-3">
                        <strong>Prénom:</strong>
                        <p>{{ participant.prenom }}</p>
                    </div>
                    <div class="mb-3">
                        <strong>Téléphone:</strong>
                        <p>{{ participant.telephone }}</p>
                    </div>
                    <div class="mb-3">
                        <strong>Sorties Organisées:</strong>
                        <p>
                            {% if participant.sorties|length > 0 %}
                                <select class="form-select">
                                    {% for sortie in participant.sorties %}
                                        <option>{{ sortie.nom }}</option>
                                    {% endfor %}
                                </select>
                            {% else %}
                                <em>Aucune sortie associée</em>
                            {% endif %}
                        </p>
                    </div>
                    <div class="mb-3">
                        <strong>Sorties auxquelles vous êtes inscrit:</strong>
                        <p>
                            {% if participant.inscriptions|length > 0 %}
                                <select class="form-select">
                                    {% for inscription in participant.inscriptions %}
                                        <option>{{ inscription.getNoSortie().nom }}</option>
                                    {% endfor %}
                                </select>
                            {% else %}
                                <em>Aucune sortie associée</em>
                            {% endif %}
                        </p>
                    </div>

                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="mb-3">
                            <strong>Administrateur:</strong>
                            <p>{{ participant.administrateur ? 'Oui' : 'Non' }}</p>
                        </div>
                        <div class="mb-3">
                            <strong>Actif:</strong>
                            <p>{{ participant.actif ? 'Oui' : 'Non' }}</p>
                        </div>
                        <div class="mb-3">
                            <strong>Rôles:</strong>
                            <pre>{{ participant.roles|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_participant_index') }}" class="btn btn-primary mx-2">Liste d'utilisateurs</a>
            {% endif %}
            <a href="{{ path('app_participant_edit_profil') }}" class="btn btn-success mx-2">Modifier le profil</a>
        </div>
    </div>
{% endblock %}
