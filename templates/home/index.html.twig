        <!-- Boutons placés en bas de page -->
        <div class="d-flex justify-content-center">
            <a href="{{ path('app_lieux_new') }}" class="btn btn-primary ms-2">Ajouter un lieu</a>
            <a href="{{ path('app_sorties_new') }}" class="btn btn-primary ms-2">Créer une nouvelle sortie</a>
            <a href="{{ path('app_ajouter_villes_new') }}" class="btn btn-primary ms-2">Ajouter une ville</a>
