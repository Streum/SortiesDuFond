

{% block body %}
    <h1 class="d-flex justify-content-center">Créer un lieu</h1>
    <div class="container" data-controller="modal-form">
        <div class="row justify-content-center">
            <div class="col-md-4">
                {{ form_start(form) }}
                {{ form_row(form.nomLieu) }}
                <div class="row">
                    <div class="col">{{ form_row(form.latitude) }}</div>
                    <div class="col">{{ form_row(form.longitude) }}</div>
                </div>
                {{ form_row(form.rue) }}
                {{ form_row(form.noVille) }}
                <div class="d-flex justify-content-center">
                    <a class="btn btn-primary ms-2" href="#" data-action="modal-form#submitForm">Créer</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}