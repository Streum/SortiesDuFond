{% extends 'base.html.twig' %}

{% block title %}Administration Utilisateurs{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center">Liste des utilisateurs</h1>


    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Pseudo</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Telephone</th>
            <th>Administrateur</th>
            <th>Actif</th>
            <th>Roles</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}"
                       class="btn btn-primary">Details</a>
                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}" class="btn btn-primary">Modifier</a>
                    {% if participant.actif %}
                        <a href="{{ path('app_participant_actif', {'id': participant.id}) }}" class="btn btn-warning">Désactiver</a>
                    {% else %}
                        <a href="{{ path('app_participant_actif', {'id': participant.id}) }}" class="btn btn-success">Activer</a>
                    {% endif %}

                    {{ include('participant/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <a href="{{ path('app_participant_new') }}" class="btn btn-primary">Créer un nouvel utilisateur</a>
        <a href="{{ path('app_participant_import') }}" class="btn btn-primary">Importer à partir d'un fichier CSV</a>
    </div>



{% endblock %}
