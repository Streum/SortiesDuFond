{% extends 'base.html.twig' %}

{% block title %}Nouvelle Sorties{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center">Créer une sortie</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                {{ form_start(formS) }}

                {{ form_row(formS.nom) }}
                {{ form_row(formS.dateDebut) }}
                {{ form_row(formS.duree) }}
                {{ form_row(formS.nbInscriptionsMax) }}
                {{ form_row(formS.descriptionInfos) }}
                {{ form_row(formS.noLieu) }}
                <div class="d-flex justify-content-center">
                <a href="#" class="btn btn-warning ms-2 mb-3" {{ stimulus_controller('modal-form', {
                    'formUrl': path('app_lieux_create_ajax'),
                }) }} data-action="modal-form#openModal">Créer un lieu</a>
                </div>
                {{ form_row(formS.dateClotureInscription) }}
                <div class="d-flex justify-content-center">
                    <button class="btn btn-success ms-2" href="{{ path('app_sorties_new') }}">Créer</button>
                    <a class="btn btn-primary ms-2" href="{{ path('app_sorties_index') }}">Liste des sorties</a>
                </div>
                {{ form_end(formS) }}
            </div>
        </div>
    </div>
    {% include 'part/_modal.html.twig' with { modalTitle: 'Ajouter un lieu'} %}
{% endblock %}
