{% extends 'base.html.twig' %}

{% block title %}Modifier Sorties{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center">Modifier la sortie</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                {{ form_start(form) }}

                {{ form_row(form.nom) }}
                {{ form_row(form.dateDebut) }}
                {{ form_row(form.duree) }}
                {{ form_row(form.nbInscriptionsMax) }}
                {{ form_row(form.descriptionInfos) }}
                {{ form_row(form.noLieu) }}
                {{ form_row(form.dateClotureInscription) }}
                <div class="d-flex justify-content-center">
                    <button class="btn btn-success ms-2" href="{{ path('app_sorties_edit', {'id': sortie.id}) }}">Modifier</button>
                    <a class="btn btn-primary ms-2" href="{{ path('app_sorties_index') }}">Liste des sorties</a>
                    {{ form_end(form) }}
                    {{ include('sorties/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
