{% extends 'base.html.twig' %}

{% block title %}Modifier Lieux{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center">Modifier le lieu</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                {{ form_start(form) }}
                {{ form_row(form.nomLieu) }}
                <div class="row">
                    <div class="col">{{ form_row(form.latitude) }}</div>
                    <div class="col">{{ form_row(form.longitude) }}</div>
                </div>
                {{ form_row(form.rue) }}
                {{ form_row(form.noVille) }}
                <div class="d-flex justify-content-center">
                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('lieux/_form.html.twig', {'button_label': 'Modifier'}) }}
                        {{ include('lieux/_delete_form.html.twig') }}
                    {% endif %}
                    <a class="btn btn-primary ms-2" href="{{ path('app_lieux_index') }}">Liste des lieux</a>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>




{% endblock %}
