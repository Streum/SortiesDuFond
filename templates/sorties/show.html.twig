{% extends 'base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center">Sorties</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ sortie.nom }}</td>
                    </tr>
                    <tr>
                        <th>Date de Début</th>
                        <td>{{ sortie.dateDebut ? sortie.dateDebut|date('d-m-Y H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Date de Clôture</th>
                        <td>{{ sortie.dateCloture ? sortie.dateCloture|date('d-m-Y H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Durée</th>
                        <td>{{ sortie.duree }}</td>
                    </tr>
                    <tr>
                        <th>Nombre d'inscrits</th>
                        <td>{{ cpt }}/{{ sortie.nbInscriptionsMax }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ sortie.descriptionInfos }}</td>
                    </tr>
                    <tr>
                        <th>État de la Sortie</th>
                        <td>{{ sortie.noEtat.libelle }}</td>
                    </tr>
                    <tr>
                        <th>Photo</th>
                        <td>{{ sortie.urlPhoto }}</td>
                    </tr>
                    <tr>
                        <th>
                            <label for="participant">Participants</label>
                        </th>
                        <td>
                            {% if cpt > 0 %}
                            <select name="participant" id="participant">
                                {% for inscription in inscriptions %}
                                    <option value="{{ inscription.noParticipant.id }}">{{ inscription.noParticipant.pseudo }}</option>
                                {% endfor %}
                            </select>
                            {% else %}
                            <p>Aucun participant</p>
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <a href="{{ path('app_sorties_index') }}" class="btn btn-primary ms-2">Liste des sorties</a>
        <a href="{{ path('app_sorties_edit', {'id': sortie.id}) }}" class="btn btn-success ms-2">Modifier</a>
        <a href="{{ path('app_sorties_inscription', {'id': sortie.id}) }}" class="btn btn-primary ms-2">S'inscrire</a>
        <a href="{{ path('app_sorties_desinscription', {'id': sortie.id}) }}" class="btn btn-primary ms-2">Se
            désinscrire</a>
    </div>
{% endblock %}
